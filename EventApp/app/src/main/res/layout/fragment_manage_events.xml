<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F3E5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->

    <!-- Edit Event Button -->

    <TextView
        android:id="@+id/manageEventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Manage Events"
        android:textColor="#4A148C"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Tabs -->

    <Button
        android:id="@+id/btnEditEvent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#6A1B9A"
        android:text="Edit Event"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="View Map" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnWaiting"
            android:text="Waiting List"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#4A148C"
            android:layout_width="0dp"
            android:layout_height="42dp"/>

        <Button
            android:id="@+id/btnSelected"
            android:text="Selected"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#4A148C"
            android:layout_width="0dp"
            android:layout_height="42dp"/>

        <Button
            android:id="@+id/btnEnrolled"
            android:text="Enrolled"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#4A148C"
            android:layout_width="0dp"
            android:layout_height="42dp"/>

        <Button
            android:id="@+id/btnCancelled"
            android:text="Cancelled"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#4A148C"
            android:layout_width="0dp"
            android:layout_height="42dp"/>
    </LinearLayout>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewList"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Lottery Section -->
    <LinearLayout
        android:id="@+id/lotterySection"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Number of participants to select:"
            android:textColor="#4A148C"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputNumber"
            android:inputType="number"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

        <Button
            android:id="@+id/btnDrawLottery"
            android:text="Draw Lottery"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>