<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#F8F6FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- BUTTONS (IDs must match fragment code) -->

    <Button
        android:id="@+id/btnAdminManageEvents"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Manage Events"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAdminManageUsers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Manage Profiles"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAdminManageImages"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Browse Images"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAdminRemoveOrganizers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Remove Organizers"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAdminNotificationLogs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Notification Logs"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAdminSystemConfig"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="System Config"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white" />

</LinearLayout>
